<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:currencyApp="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uk.co.botondbutuza.currency.ui.MainActivity">

    <Button
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Select date"
        currencyApp:layout_constraintEnd_toEndOf="parent"
        currencyApp:layout_constraintStart_toStartOf="parent"
        currencyApp:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
